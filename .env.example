# Observability Stack Configuration
# Copy this file to .env and modify as needed
# This is a development-focused observability stack for multiple projects

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_RETENTION_SIZE=10GB

# Jaeger Configuration
COLLECTOR_OTLP_ENABLED=false
COLLECTOR_ZIPKIN_HOST_PORT=:9411

# Zipkin Configuration
STORAGE_TYPE=mem

# Network Configuration
COMPOSE_PROJECT_NAME=observability

# Project-Specific Configuration
# Use these variables to customize for different projects
PROJECT_NAME=my-project
ENVIRONMENT=development

# External Services (Optional)
# Uncomment and configure if you have external services to monitor
# EXTERNAL_API_HOST=host.docker.internal
# EXTERNAL_API_PORT=8000
# SPRING_APP_HOST=host.docker.internal
# SPRING_APP_PORT=8080
